# OnchainMind Environment Configuration
# Copy this file to .env and fill in your values

# Application Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Backend Configuration
PORT=5000
HOST=0.0.0.0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Blockchain Configuration
NETWORK=circleLayer
CIRCLE_LAYER_RPC_URL=https://testnet.circle.com/rpc
CHAIN_ID=1234

# Contract Addresses (fill after deployment)
REPUTATION_SCORE_ADDRESS=0x...
AI_IDENTITY_ADDRESS=0x...
AI_REGISTRY_ADDRESS=0x...

# Optional: Private key for admin operations (keep secure!)
PRIVATE_KEY=your_private_key_here

# Database Configuration (if using external database)
DATABASE_URL=mongodb://localhost:27017/onchainmind
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# External APIs
ETHERSCAN_API_KEY=your_etherscan_api_key_here
INFURA_PROJECT_ID=your_infura_project_id_here
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Development Tools
DEBUG=*
NODE_OPTIONS=--max-old-space-size=4096
